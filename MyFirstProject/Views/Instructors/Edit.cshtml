@model MyFirstProject.Models.Instructor

<h2>Edit Instructor</h2>

<form asp-action="Edit" asp-controller="Instructors" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Salary" class="form-label"></label>
        <input asp-for="Salary" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DeptId" class="form-label">Department</label>
        <select asp-for="DeptId" class="form-select" asp-items="ViewBag.DeptId"></select>
    </div>

    <div class="mb-3">
        <label asp-for="CrsId" class="form-label">Course</label>
        <select asp-for="CrsId" class="form-select" asp-items="ViewBag.CrsId"></select>
    </div>

    <div class="mb-3">
        <label class="form-label">Image</label>
        <input type="file" name="ImageFile" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <img src="@Model.Image" alt="Instructor Image" class="img-thumbnail mt-2" style="max-height:150px;" />
        }
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
