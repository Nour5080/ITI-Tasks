@model MyFirstProject.Models.Course

<h2>Delete Course</h2>

<h3>Are you sure you want to delete this course?</h3>
<div>
    <p><strong>Id:</strong> @Model.Id</p>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Degree</dt>
        <dd class="col-sm-9">@Model.Degree</dd>

        <dt class="col-sm-3">Minimum Degree</dt>
        <dd class="col-sm-9">@Model.MinimumDegree</dd>

        <dt class="col-sm-3">Hours</dt>
        <dd class="col-sm-9">@Model.Hours</dd>

        <dt class="col-sm-3">Department</dt>
        <dd class="col-sm-9">@Model.Department?.Name</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
