@model MyFirstProject.Models.CourseStudents

<h2>Assignment Details</h2>

<div class="card" style="width: 24rem; margin-top:20px;">
    <div class="card-body">
        <h5 class="card-title">Id: @Model.Id</h5>
        <p class="card-text"><strong>Student:</strong> @Model.Student?.Id - @Model.Student?.Name</p>
        <p class="card-text"><strong>Course:</strong> @Model.Course?.Id - @Model.Course?.Name</p>
        <p class="card-text"><strong>Degree:</strong> @Model.Degree</p>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

