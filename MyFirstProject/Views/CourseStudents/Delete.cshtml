@model MyFirstProject.Models.CourseStudents

<h2>Delete Assignment</h2>

<h3>Are you sure you want to delete this assignment?</h3>

<dl class="row">
    <dt class="col-sm-2">Student</dt>
    <dd class="col-sm-10">@Model.Student?.Name</dd>

    <dt class="col-sm-2">Course</dt>
    <dd class="col-sm-10">@Model.Course?.Name</dd>

    <dt class="col-sm-2">Degree</dt>
    <dd class="col-sm-10">@Model.Degree</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
