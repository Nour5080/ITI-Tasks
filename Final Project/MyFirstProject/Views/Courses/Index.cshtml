@{
    ViewData["Title"] = "Courses";
    var roles = ViewBag.Roles as List<string> ?? new List<string>();
    var availableCourses = ViewBag.AvailableCourses as List<MyFirstProject.Models.Course> ?? new List<MyFirstProject.Models.Course>();
    var myCourses = ViewBag.MyCourses as List<MyFirstProject.Models.Course> ?? new List<MyFirstProject.Models.Course>();
}

<h2 class="mb-4">Courses</h2>

@if (roles.Contains("Student"))
{
    <h4 class="mt-4">Available Courses</h4>
    <table class="table table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Department</th>
                <th>Hours</th>
                <th>Degree</th>
                <th>Min Degree</th>
                <th>Instructors</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (availableCourses.Any())
            {
                @foreach (var item in availableCourses)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Department?.Name</td>
                        <td>@item.Hours</td>
                        <td>@item.Degree</td>
                        <td>@item.MinimumDegree</td>
                        <td>
                            @if (item.Instructors != null && item.Instructors.Any())
                            {
                                <ul class="mb-0 ps-3">
                                    @foreach (var i in item.Instructors)
                                    {
                                        <li>@i.Name</li>
                                    }
                                </ul>
                            }
                            else
                            {

                                <span class="text-muted">No instructors</span>
                            }
                        </td>
                        <td class="d-flex justify-content-start gap-2">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                            <form asp-action="JoinCourse" method="post" class="mb-0">
                                <input type="hidden" name="courseId" value="@item.Id" />
                                <button type="submit" class="btn btn-primary btn-sm">Join</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="table-secondary text-center">
                    <td colspan="7">No courses available</td>
                </tr>
            }
        </tbody>
    </table>

    <h4 class="mt-5">My Courses</h4>
    <table class="table table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Department</th>
                <th>Hours</th>
                <th>Degree</th>
                <th>Min Degree</th>
                <th>Instructors</th>
                <th style="width: 120px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (myCourses.Any())
            {
                @foreach (var item in myCourses)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Department?.Name</td>
                        <td>@item.Hours</td>
                        <td>@item.Degree</td>
                        <td>@item.MinimumDegree</td>
                        <td>
                            @if (item.Instructors != null && item.Instructors.Any())
                            {
                                <ul class="mb-0 ps-3">
                                    @foreach (var i in item.Instructors)
                                    {
                                        <li>@i.Name</li>
                                    }
                                </ul>
                            }
                            else
                            {

                                <span class="text-muted">No instructors</span>
                            }
                        </td>
                        <td class="d-flex justify-content-start gap-2">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="table-secondary text-center">
                    <td colspan="7">No courses available</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h4 class="mt-4">All Courses</h4>
    <table class="table table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Department</th>
                <th>Hours</th>
                <th>Degree</th>
                <th>Min Degree</th>
                <th>Instructors</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Department?.Name</td>
                    <td>@item.Hours</td>
                    <td>@item.Degree</td>
                    <td>@item.MinimumDegree</td>
                    <td>
                        @if (item.Instructors != null && item.Instructors.Any())
                        {
                            <ul class="mb-0 ps-3">
                                @foreach (var i in item.Instructors)
                                {
                                    <li>@i.Name</li>
                                }
                            </ul>
                        }
                        else
                        {

                            <span class="text-muted">No instructors</span>
                        }
                    </td>
                    <td class="d-flex justify-content-start gap-2">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
