@model X.PagedList.IPagedList<MyFirstProject.Models.Course>
@using MyFirstProject.Models
@using X.PagedList.Mvc.Core
@using X.PagedList

@{
    ViewData["Title"] = "Courses";
    var roles = ViewBag.Roles as List<string> ?? new List<string>();
    var availableCourses = ViewBag.AvailableCourses as IPagedList<Course> ?? new StaticPagedList<Course>(new List<Course>(), 1, 5, 0);
    var myCourses = ViewBag.MyCourses as IPagedList<Course> ?? new StaticPagedList<Course>(new List<Course>(), 1, 5, 0);
}

<h2 class="mb-4">Courses</h2>

@if (roles.Contains("Student"))
{
    <h4 class="mt-4">Available Courses</h4>
    <table class="table table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Department</th>
                <th>Hours</th>
                <th>Degree</th>
                <th>Min Degree</th>
                <th>Instructors</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (availableCourses.Any())
            {
                @foreach (var item in availableCourses)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Department?.Name</td>
                        <td>@item.Hours</td>
                        <td>@item.Degree</td>
                        <td>@item.MinimumDegree</td>
                        <td>
                            @if (item.Instructors != null && item.Instructors.Any())
                            {
                                <ul class="mb-0 ps-3">
                                    @foreach (var i in item.Instructors)
                                    {
                                        <li>@i.Name</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <span class="text-muted">No instructors</span>
                            }
                        </td>
                        <td class="d-flex gap-2">
                            <a asp-controller="Courses" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                            <form asp-action="JoinCourse" method="post" class="mb-0">
                                <input type="hidden" name="courseId" value="@item.Id" />
                                <button type="submit" class="btn btn-primary btn-sm">Join</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="table-secondary text-center">
                    <td colspan="7">No courses available</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-center mt-3">
        @Html.PagedListPager(availableCourses, page => Url.Action("Index", new { page }), new PagedListRenderOptions
        {
            LiElementClasses = new[] { "page-item" },
        PageClasses = new[] { "page-link" },
        UlElementClasses = new[] { "pagination" },
        ContainerDivClasses = new[] { "d-flex justify-content-center" }
        })
</div>

