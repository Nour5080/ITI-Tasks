    @model MyFirstProject.Models.Course

    <h2>Course Details</h2>

    <div class="card" style="width: 24rem; margin-top:20px;">
        <div class="card-body">
            <p><strong>Id:</strong> @Model.Id</p>
            <h4 class="card-title">@Model.Name</h4>
            <p class="card-text"><strong>Degree:</strong> @Model.Degree</p>
            <p class="card-text"><strong>Minimum Degree:</strong> @Model.MinimumDegree</p>
            <p class="card-text"><strong>Hours:</strong> @Model.Hours</p>
            <p class="card-text"><strong>Department:</strong> @Model.Department?.Name</p>

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
