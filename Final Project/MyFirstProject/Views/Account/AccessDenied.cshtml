@{
    ViewData["Title"] = "Access Denied";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 text-center">
    <div class="card shadow-sm p-5 mx-auto" style="max-width: 600px;">
        <h1 class="text-danger mb-3">
            <i class="bi bi-exclamation-triangle-fill"></i> Access Denied
        </h1>
        <p class="lead mb-4">
            Sorry, you don’t have permission to access this page.
        </p>

        @if (User.Identity != null && User.Identity.IsAuthenticated)
        {
            <p class="text-muted">
                You are logged in as <strong>@User.Identity.Name</strong>.
            </p>
        }
        else
        {
            <p class="text-muted">You are not logged in.</p>
        }

        <div class="mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-2">
                <i class="bi bi-house-door"></i> Go Home
            </a>
            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary">
                <i class="bi bi-box-arrow-in-right"></i> Login
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
}
