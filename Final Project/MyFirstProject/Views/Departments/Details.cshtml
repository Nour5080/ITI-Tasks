@model MyFirstProject.Models.Department

<h2>Department Details</h2>

<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Manager</dt>
        <dd class="col-sm-10">@Model.ManagerName</dd>

        <dt class="col-sm-2">Courses</dt>
        <dd class="col-sm-10">
            @if (Model.Courses != null && Model.Courses.Any())
            {
                <ul>
                    @foreach (var c in Model.Courses)
                    {
                        <li>@c.Name</li>
                    }
                </ul>
            }
            else
            {
                <span>No courses</span>
            }
        </dd>

        <dt class="col-sm-2">Students</dt>
        <dd class="col-sm-10">
            @if (Model.Students != null && Model.Students.Any())
            {
                <ul>
                    @foreach (var s in Model.Students)
                    {
                        <li>@s.Name</li>
                    }
                </ul>
            }
            else
            {
                <span>No students</span>
            }
        </dd>

        <dt class="col-sm-2">Instructors</dt>
        <dd class="col-sm-10">
            @if (Model.Instructors != null && Model.Instructors.Any())
            {
                <ul>
                    @foreach (var i in Model.Instructors)
                    {
                        <li>@i.Name</li>
                    }
                </ul>
            }
            else
            {
                <span>No instructors</span>
            }
        </dd>
    </dl>
    <a asp-action="Index" class="btn btn-secondary mt-2">Back to List</a>
</div>
