@model MyFirstProject.Models.Department

<h2>Delete Department</h2>

<h3>Are you sure you want to delete this department?</h3>

<div class="card p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Manager</dt>
        <dd class="col-sm-10">@Model.ManagerName</dd>

        <dt class="col-sm-2">Courses</dt>
        <dd class="col-sm-10">@Model.Courses?.Count ?? 0</dd>

        <dt class="col-sm-2">Students</dt>
        <dd class="col-sm-10">@Model.Students?.Count ?? 0</dd>

        <dt class="col-sm-2">Instructors</dt>
        <dd class="col-sm-10">@Model.Instructors?.Count ?? 0</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
